{
  "appId": "com.example.taigidictapp",
  "appName": "Taigi Dictionary",
  "webDir": "www",
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#ffffff",
      "showSpinner": false
    },
    "App": {
      "launchUrl": "index.html"
    }
  },
  "server": {
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "localhost"
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "ios": {
    "contentInset": "automatic",
    "scrollEnabled": true,
    "allowsLinkPreview": false
  }
}
